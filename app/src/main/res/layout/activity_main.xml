<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/mountine"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mono"
        android:text="Math Game"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/level"
        android:layout_marginEnd="150dp"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Level 1"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/shuncaki"
        android:textColor="@color/purple_500"
        android:layout_marginRight="150dp" />


    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 - misol"
        android:textColor="#14877B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_tv"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shuncaki"
        android:gravity="center"
        android:padding="7dp"
        android:text="5*5="
        android:textColor="@color/white"
        android:textSize="40sp" />

    <RadioGroup
        android:layout_gravity="center"
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/button1"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="25"
            android:textSize="25sp"
            android:fontFamily="@font/mono"
            android:background="@drawable/shuncaki"/>
        <RadioButton
            android:layout_marginTop="15dp"
            android:id="@+id/button2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="30"
            android:textSize="25sp"
            android:fontFamily="@font/mono"
            android:background="@drawable/shuncaki"/>

        <RadioButton
            android:layout_marginTop="15dp"
            android:id="@+id/button3"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="10"
            android:textSize="25sp"
            android:fontFamily="@font/mono"
            android:background="@drawable/shuncaki"/>

    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Conitune"
        android:textAllCaps="false"
        android:background="@drawable/shunchaki2"
        android:fontFamily="@font/mono"/>






</LinearLayout>